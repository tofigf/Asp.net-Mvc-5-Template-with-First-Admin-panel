
@model EscanorHomeWork.Models.ViewHome
<!-- =========    FEATURES START    ======== -->
<section class="features">
    <div class="container">
        <div class="row">

            <div class="feat-container">
                @foreach (var item in Model.Features)
    {
            <div class="col-md-4 feature-box">
                <span class="icon icon-@item.Icon"></span>
                <h3>@item.Name</h3>
                <p>@item.Desc</p>
            </div>
}

            </div>

        </div>
    </div>
</section>
<!-- =========    FEATURES END    ======== -->
<!-- =========    ABOUT START    ======== -->
<section class="sections about" id="about" data-scroll-index="1">
    <div class="container">
        <div class="row">

            <div class="about-con col-md-9">
                <h4>@Model.About.PreTitle</h4>
                <h3>@Html.Raw(Model.About.Title)</h3>
                <p>@Model.About.Text</p>
                <!-- SIGNATURE -->
                <div class="signature">
                    <img src="~/Public/img/@Model.About.Signature" alt="signature" />
                </div>
            </div>

        </div>
    </div>
</section>
<!-- =========    ABOUT END    ======== -->
<!-- =========    SERVICES START    ======== -->
<section class="sections services" id="services" data-scroll-index="2">
    <div class="container">
        <div class="row">

            <div class="title">
                <h3>Our Services</h3>
                <p>Lorem Ipsum is simply dummy text of the printing and typesetting.</p>
            </div>
            @foreach (var item in Model.Services)
            {
                <!-- Services items -->
                <div class="col-md-4">
                    <div class="item">
                        <!-- HOVER EFFECT -->
                        <div class="moving-border"><div></div></div>
                        <!-- SERVICE ICON -->
                        <span class="icon icon-@item.Icon"></span>
                        <!-- SERVICE TITLE -->
                        <h5>@item.Name</h5>
                        <!-- SERVICES CONTENT -->
                        <p>@item.Desc</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- =========    SERVICES END    ======== -->
<!-- =========    EXPERIENCES START    ======== -->
<section class="experiences">
    <div class="container">
        <div class="row">

            <!-- EXPERIENCES CONTENT START -->
            <div class="exper-con sections col-md-7">

                <h5>Why You Can Choose Us ?</h5>
                <h4>Building flexible, design-driven websites with Escanor.</h4>
                <p>Lorem Ipsum is simply dummy text of the when an unknown printer took printing and type setting industry It has survived not only five centuries.</p>
                <!-- SKILLS START -->
                <div class="skills">
                    @foreach (var item in Model.Skills)
        {
            <div class="single_progress_bar col-md-12">
                <h2>@item.Name @item.Value%</h2>
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%">
                        <span class="sr-only">@item.Value% Complete</span>
                    </div>
                </div>
            </div>
}
                </div>
                <!-- SKILLS END -->

            </div>
            <!-- EXPERIENCES CONTENT END -->

        </div>
    </div>
</section>
<!-- =========    EXPERIENCES END    ======== -->
<!-- =========    WORK START    ======== -->
<section class="sections work" id="work" data-scroll-index="3">
    <div class="container">
        <div class="row">
            <div class="title">
                <h3>Latest Works</h3>
                <p>Lorem Ipsum is simply dummy text of the printing and typesetting.</p>
            </div>
            <!-- WORK FILTER BUTTONS -->
            <div class="button-group filter-work">
                <a class="button is-checked" data-filter="*">All</a>
                @foreach (var category in Model.Categories)
        {
            <a class="button " data-filter=".item-@category.Name.ToLower().Replace(" ","_")">@category.Name</a>
}
            </div>
            <!-- END WORK FILTER BUTTONS -->
            <!-- WORK CONTENT START -->
            <div class="work-content">
                @foreach (var project in Model.Projects)
    {
            <!-- WORK ITEM -->
            <div class="work-item item-@project.Category.Name.ToLower().Replace(" ","_" )">
                <div class="work-caption">
                    <a class="modal-image" href="#modal-image-@project.Id">

                        <!-- WORK IMAGE -->
                        <img src="~/Public/img/portfolio/@project.Photo" alt="Image Title" />
                        <!-- WORK TITLE -->
                        <div class="overlay">
                            <div class="info-content">
                                <h4>@project.Name</h4>
                            </div>
                        </div>
                        <!-- POPUP WHITE BOX -->
                        <div id="modal-image-@project.Id" class="white-popup mfp-hide">
                            <!-- POPUP WHITE BOX IMAGE -->
                            <img src="~/Public/img/portfolio/@project.Photo" alt="Image Title" />
                            <div>
                                <!-- POPUP WHITE BOX TITLE -->
                                <h3>@project.Name</h3>
                                <!-- POPUP WHITE BOX DESCRIPTION -->
                                <p>@project.Desc</p>
                            </div>
                        </div>
                        <!-- END POPUP WHITE BOX -->
                    </a>
                </div>
            </div>
}
            </div>
            <!-- WORK CONTENT END -->
        </div>
    </div>
</section>
<!-- =========    WORK END    ======== -->
<!-- =========    FACTS START    ======== -->
<section class="sections facts">
    <div class="container">
        <div class="row">
            @foreach (var stat in Model.Stats)
    {
        <!-- Fun Facts item -->
        <div class="fact-item col-md-3 col-sm-6">
            <div class="counting-icon">
                <!-- Icon -->
                <span class="icon icon-@stat.Icon"></span>
            </div>
            <!-- Number -->
            <span class="count" data-from="0" data-to="@stat.Value">@stat.Value</span>
            <!-- Title -->
            <h4>@stat.Name</h4>
        </div>
}

         
        </div>
    </div>
</section>
<!-- =========    FACTS END    ======== -->
