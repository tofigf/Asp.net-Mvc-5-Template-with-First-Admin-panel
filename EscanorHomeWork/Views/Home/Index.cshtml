<!-- ====== TESTIMONIALS START ======  -->
<section class="testimonials text-center">
    <div class="testimonials-overlay sections">
        <div class="container">
            <div class="row">
                <div class="title">
                    <h3>Client Testimonials</h3>
                    <div class="devider"></div>
                </div>
                <div class="owl-carousel owl-theme">
                    @foreach (var feedback in Model.Feedbacks)
    {

                <!-- TESTIMONIALS ITEM -->
                <div class="t-item">
                    <div class="testimonial-box col-md-8 col-xs-10">
                        <p>@feedback.Desc</p>
                        <!-- TESTIMONIAL NAME -->
                        <h3>@feedback.Holder @Html.Raw(feedback.Position)</h3>
                    </div>
                </div>
}
                </div>
                </div>
        </div>
    </div>
</section>
<!-- =========    TESTIMONIALS END    ======== -->
<!-- =========    BLOG START    ======== -->
<section class="sections blog" id="blog" data-scroll-index="5">
    <div class="container">
        <div class="row">
            <div class="title">
                <h3>Our Recent Posts</h3>
                <p>Lorem Ipsum is simply dummy text of the printing and typesetting.</p>
            </div>

            
            @foreach (var post in Model.Posts)
    {
        <!-- START BLOG POST -->
        <div class="col-md-4 blog-box">
            <div class="blog-item">
                <!-- BLOG IMAGE -->
                <div class="feature-box-img" style="background-image: url('../Public/img/blog-@post.Photo');">
                    <div class="blog-overlay"></div>
                </div>
                <!-- CATEGORY AND TIME OF THE POST -->
                <ul class="info">
                    <li class="category">
                        <a href="#0">
                            <i class="fa fa-tags"></i>
                            <span>@post.Tags</span>
                        </a>
                    </li>
                    <li class="time">
                        <a href="#0">
                            <i class="fa fa-calendar-o"></i>
                            <span>@post.Date.Value.ToString("dd.MM.yyyy")</span>
                        </a>
                    </li>
                </ul>
                <!-- POST TITLTE -->
                <a href="#0">
                    <h4>@post.Title</h4>
                </a>
                <!-- POST CONTENT-->
                <p> @post.Text</p>

                <!-- POST LINK -->
                <div class="post-link">
                    <a href="#0">
                        Read More
                        <i class="fa fa-angle-double-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <!-- END BLOG POST -->
}

        </div>
    </div>
</section>
<!-- =========    BLOG START    ======== -->
<!-- =========    CONTACT START    ======== -->
<section class="sections contact" id="contact" data-scroll-index="6">
    <div class="container">
        <div class="row">

            <div class="title">
                <h3>Get in Touch</h3>
                <p>Lorem Ipsum is simply dummy text of the printing and typesetting.</p>
            </div>

            <!-- CONTACT INFO START  -->
            <div class="contact-info col-md-12">

                <div class="item col-md-4">
                    <span class="icon icon-map-pin"></span>
                    <h5>@ViewBag.Setting.Address</h5>
                </div>
                <div class="item col-md-4">
                    <span class="icon icon-mobile"></span>
                  
                    <h5>@ViewBag.Setting.Phone</h5>
                </div>
                <div class="item col-md-4">
                    <span class="icon icon-envelope"></span>
                    <h5>@ViewBag.Setting.Email</h5>
                   
                </div>

            </div>
            <!-- CONTACT INFO END  -->
            <!-- CONTACT FORM START -->
            <div class="col-md-12 contact-form">
                <form action="http://joker-themes.com/escanordemo/demos/default-version/php/contact.php" method="POST" class="cont-fo">

                    <div class="contact-item col-md-6">
                        <input type="text" name="name" placeholder="Name *" required="required">
                    </div>
                    <div class="contact-item col-md-6">
                        <input type="email" name="email" placeholder="Email *" required="required">
                    </div>
                    <div class="contact-item col-md-6">
                        <input type="text" name="phone" placeholder="Phone">
                    </div>
                    <div class="contact-item col-md-6">
                        <input type="text" name="website" placeholder="Website">
                    </div>
                    <div class="contact-item col-md-12">
                        <textarea id="form_message" name="message" placeholder="Message *" rows="4" required="required" data-error="Message."></textarea>
                    </div>
                    <div class="contact-item col-md-12">
                        <input type="submit" class="button disabled" value="Send Message">
                    </div>

                </form>
            </div>
            <!-- CONTACT FORM END -->

        </div>
    </div>
</section>
<!-- =========    CONTACT END    ======== -->
